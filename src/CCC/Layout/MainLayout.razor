@inherits LayoutComponentBase
@using CCC.Services.Notification
@using CCC.Services.Utils
@using CCC.Layout.Components
@using CCC.Utils
<MudThemeProvider @ref="_mudThemeProvider" IsDarkMode="@_isDarkMode"/>
<MudDialogProvider />
<MudPopoverProvider />
<MudSnackbarProvider  Style="z-index=999999;"/>

<AuthorizeView>
    <Authorized>
        @{
            var providers = context.User.Claims.Where(c => c.Type == "ProviderId").Select(c => c.Value).ToList();

            if (!providers.Contains("password"))
            {
                <AddPassword/>
            }
            if(!providers.Contains("google.com"))
            {
                <AddGoogle/>
            }
        }
    </Authorized>
</AuthorizeView>
<MudLayout Class="d-flex flex-column" Style="min-height: 100vhd;">
    <MudAppBar Elevation="1">
        <AuthorizeView>
            <Authorized>
                <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
            </Authorized>
        </AuthorizeView>
        <MudText Typo="Typo.h6" Class="ml-2">CCC</MudText>
        <MudSpacer />
        <MudTooltip Text="Cambiar tema">
            <MudIconButton Icon="@_currentIcon" Color="Color.Inherit" OnClick="@ToggleDarkMode" />
        </MudTooltip>
    </MudAppBar>

    <AuthorizeView>
        <Authorized>
            <MainMenu IsOpen="@_drawerOpen"/>
        </Authorized>
    </AuthorizeView>

    <MudMainContent Class="flex-grow-1">
        <MudContainer MaxWidth="MaxWidth.Large" Class="main-content-container">
            @Body
        </MudContainer>
    </MudMainContent>
    <LoadingOverlay />
</MudLayout>

@code {
    private bool _drawerOpen = false;
    private MudThemeProvider _mudThemeProvider = null!;
    private bool _isDarkMode = false;
    private string _currentIcon = Icons.Material.Filled.DarkMode;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Detectar el modo oscuro del sistema al inicio
            _isDarkMode = await _mudThemeProvider.GetSystemDarkModeAsync();
            UpdateIconAndTheme();
            StateHasChanged();
        }
    }

    void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
        UpdateIconAndTheme();
    }

    void UpdateIconAndTheme()
    {
        _currentIcon = _isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode;
        StateHasChanged();
    }
}
